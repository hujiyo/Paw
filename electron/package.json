{
  "name": "paw-desktop",
  "version": "1.0.0",
  "description": "Paw - Intelligent Terminal AI Agent",
  "main": "main.js",
  "author": "Paw",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-serve": "^1.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.paw.desktop",
    "productName": "Paw",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "../paw_env",
        "to": "paw_env",
        "filter": [
          "**/*",
          "!**/*.pyc",
          "!**/__pycache__/**",
          "!**/*.log"
        ]
      },
      {
        "from": "../",
        "to": "paw-core",
        "filter": [
          "**/*",
          "!electron/**",
          "!node_modules/**",
          "!dist/**",
          "!*.log",
          "!__pycache__/**",
          "!.git/**"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
